<center> 
<h1> <%= @category.category_name %> </h1>
<br>
<h3>Recipes in this category </h3>
<% @category.recipes.each do |recipe| %>
    <p><%= link_to recipe.recipe_name, recipe_path(recipe) %> <p>
<%end%>
<br><br><br><br><br><br>
<%= link_to "Add a new recipe to this category", new_category_recipe_path(@category)%><br><br>

<br><br>
<%= link_to 'Edit Category', [:edit, @category]%>
<br><br>
<%= form_tag category_path(@category.id), method: "delete" do %>
    <%= submit_tag "Delete #{@category.category_name}" %>
<% end %>
<br><br>
<%= link_to "Return to your homepage", user_path(@user)%>

</center>
